<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sign_up_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".SignUpActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:text="Sign up"
                        android:textSize="30sp" />

                    <!-- NAME -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <eightbitlab.com.blurview.BlurView
                            android:id="@+id/nameBlur"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:blurRadius="10"
                            app:overlayColor="#55FFFFFF" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxStrokeColor="@android:color/transparent">

                            <EditText
                                android:id="@+id/signUpEtName"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:hint="Enter name"
                                android:background="@android:color/transparent"
                                android:paddingStart="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </FrameLayout>

                    <!-- EMAIL -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <eightbitlab.com.blurview.BlurView
                            android:id="@+id/emailBlur"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:blurRadius="10"
                            app:overlayColor="#55FFFFFF" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxStrokeColor="@android:color/transparent">

                            <EditText
                                android:id="@+id/signUpEmail"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:hint="Email"
                                android:background="@android:color/transparent"
                                android:paddingStart="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </FrameLayout>

                    <!-- PASSWORD -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <eightbitlab.com.blurview.BlurView
                            android:id="@+id/passwordBlur"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:blurRadius="10"
                            app:overlayColor="#55FFFFFF" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxStrokeColor="@android:color/transparent">

                            <EditText
                                android:id="@+id/signUpPassword"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:hint="Password"
                                android:background="@android:color/transparent"
                                android:paddingStart="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </FrameLayout>

                    <!-- BUTTON -->
                    <FrameLayout
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp">

                        <eightbitlab.com.blurview.BlurView
                            android:id="@+id/signUpBlur"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:blurRadius="18"
                            app:overlayColor="#6626C6DA" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/signUpBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sign Up"
                            android:backgroundTint="@android:color/transparent"
                            app:cornerRadius="18dp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/signUpTextToSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Already got an account? Login" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/signUpProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

            </RelativeLayout>
        </ScrollView>
    </FrameLayout>
</layout>